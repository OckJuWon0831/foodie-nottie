<?xml version="1.0" encoding="utf-8"?>
<layout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:app="http://schemas.android.com/apk/res-auto"
                 xmlns:tools="http://schemas.android.com/tools"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 tools:context=".view.fragments.NavigationFragment">

        <!-- TODO: Update blank fragment layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:weightSum="3"
                    android:background="@color/maincolor"
                    android:padding="10dp">

                <ImageView
                        android:id="@+id/homeTap"
                        android:layout_weight="1"
                        android:src="@drawable/baseline_home_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/maincolor"/>

                <ImageView
                        android:id="@+id/favoriteTap"
                        android:layout_weight="1"
                        android:src="@drawable/baseline_favorite_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/maincolor"/>

                <ImageView
                        android:id="@+id/memoTap"
                        android:layout_weight="1"
                        android:src="@drawable/baseline_note_alt_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/maincolor"/>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>